<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <!-- explicit list view definition -->
  <record id="g2p_dci_api_client_credential_tree" model="ir.ui.view">
    <field name="name">g2p_dci_api_client_credential_tree</field>
    <field name="model">g2p.dci.api.client.credential</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
      </tree>
    </field>
  </record>

  <!-- explicit form view definition -->
  <record id="g2p_dci_api_client_credential_form" model="ir.ui.view">
    <field name="name">g2p_dci_api_client_credential_form</field>
    <field name="model">g2p.dci.api.client.credential</field>
    <field name="arch" type="xml">
      <form string="Data Source">
        <sheet>
          <group>
            <field name="name" />
            <field name="client_id" password="True" string="Client ID" />
            <field name="client_secret" password="True" />
          </group>
          <!-- TODO: Add the button in the footer -->
            <button
              name="show_credentials"
              string="Show"
              type="object"
              class="oe_highlight btn-primary"
            />
        </sheet>
      </form>
    </field>
  </record>

  <!-- explicit form view definition -->
  <record id="g2p_dci_api_client_credential_view_credentials" model="ir.ui.view">
    <field name="name">g2p_dci_api_client_credential_view_credentials</field>
    <field name="model">g2p.dci.api.client.credential</field>
    <field name="arch" type="xml">
      <form string="Data Source">
        <sheet>
          <h2>Make sure to copy your client id and client secret now. You won't be able to see it again!</h2>
          <group>
            <field name="client_id" widget="CopyClipboardChar" string="Client ID" />
            <field name="client_secret" widget="CopyClipboardChar" />
          </group>
          <footer>
            <button string="OK" special="cancel" class="oe_highlight" />
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <!-- actions opening views on models -->
  <record id="g2p_dci_api_client_credential_window" model="ir.actions.act_window">
    <field name="name">DCI API Client Credentials</field>
    <field name="res_model">g2p.dci.api.client.credential</field>
    <field name="view_mode">tree,form</field>
    <field name="help">Create and manage the DCI API Client Credentials.</field>
  </record>

  <!-- Sub-menu item/Action -->
  <menuitem
    id="menu_dci_api_client_credentiale"
    name="DCI API Client Credentials"
    parent="base.menu_administration"
    sequence="200"
    action="g2p_dci_api_client_credential_window"
    groups="base.group_system"
  />

</odoo>
