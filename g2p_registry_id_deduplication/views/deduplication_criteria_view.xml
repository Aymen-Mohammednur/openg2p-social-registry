<odoo>
    <record id="view_id_deduplication_criteria_tree" model="ir.ui.view">
        <field name="name">view_deduplication_configuration_tree</field>
        <field name="model">g2p.registry.id.deduplication_criteria</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_id_deduplication_criteria_form" model="ir.ui.view">
        <field name="name">view_deduplication_criteria_form</field>
        <field name="model">g2p.registry.id.deduplication_criteria</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Registry ID Deduplication Criteria">
                <sheet>
                    <div class="oe_title mb24">
                        <label for="name" string="Name:" />
                        <h1>
                            <field id="name" name="name" placeholder="Enter the Criteria Name..." />
                        </h1>
                    </div>
                    <group string="Individual">
                       <field name="ind_id_types" widget="many2many_tags" />
                    </group>
                    <group string="Group">
                        <field name="grp_id_types" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_id_deduplication_criteria" model="ir.actions.act_window">
        <field name="name">Deduplication Criteria</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.registry.id.deduplication_criteria</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add an Deduplication Criteria!
            </p><p>
                Click the new button to enter a new deduplication criteria.
            </p>
        </field>
    </record>

    <record id="action_id_deduplication_criteria_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_id_deduplication_criteria_tree" />
        <field name="act_window_id" ref="action_id_deduplication_criteria" />
    </record>

    <record id="action_id_deduplication_criteria_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_id_deduplication_criteria_form" />
        <field name="act_window_id" ref="action_id_deduplication_criteria" />
    </record>

    <menuitem
        id="g2p_id_dedupliation_config"
        name="Deduplication Criteria"
        action="action_id_deduplication_criteria"
        parent="g2p_registry_base.g2p_configuration_menu_root"
        sequence="10"
        groups="g2p_registry_base.group_g2p_admin,g2p_registry_base.group_g2p_registrar"
    />

</odoo>
