<odoo>
    <record id="view_deduplication_criteria_tree" model="ir.ui.view">
        <field name="name">view_deduplication_configuration_tree</field>
        <field name="model">g2p.registry.id.deduplication_criteria</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="id_types" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="action_deduplication_criteria" model="ir.actions.act_window">
        <field name="name">Deduplication Criteria</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.registry.id.deduplication_criteria</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add an Deduplication Criteria!
            </p><p>
                Click the new button to enter a new deduplication criteria.
            </p>
        </field>
    </record>

    <record id="action_id_type_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_deduplication_criteria_tree" />
        <field name="act_window_id" ref="action_deduplication_criteria" />
    </record>

    <menuitem
        id="g2p_dedupliation_cofing"
        name="Deduplication Criteria"
        action="action_deduplication_criteria"
        parent="g2p_registry_base.g2p_configuration_menu_root"
        sequence="10"
        groups="g2p_registry_base.group_g2p_admin,g2p_registry_base.group_g2p_registrar"
    />

</odoo>
